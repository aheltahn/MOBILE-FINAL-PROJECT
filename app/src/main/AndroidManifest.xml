<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".fishiohouse.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProjectMẫu">

        <!-- Activity khởi động (Login) -->
        <activity
            android:name=".fishiohouse.activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Các Activity khác - KHÔNG KHÓA HƯỚNG nữa -->
        <activity
            android:name=".fishiohouse.activities.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.MainActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.FoodDetailActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.CartActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.OrderHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".fishiohouse.activities.ProfileActivity"
            android:exported="false" />

        <!-- Nếu có AddFoodActivity hoặc activity khác, thêm tương tự -->

    </application>

</manifest>