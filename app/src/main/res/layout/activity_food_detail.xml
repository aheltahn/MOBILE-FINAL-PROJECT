<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_dark_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_food_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Details"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh món ăn -->
            <ImageView
                android:id="@+id/img_food_detail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Nội dung chi tiết -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="417dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/detail_content_background"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingBottom="40dp">

                <!-- Tên và nút tăng giảm số lượng -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_food_name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/quantity_layout"
                        android:text="Food Name"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/quantity_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Nút Trừ -->
                        <ImageButton
                            android:id="@+id/btn_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/quantity_button_background"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/txt_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Nút Cộng -->
                        <ImageButton
                            android:id="@+id/btn_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/quantity_button_background"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_add"
                            app:tint="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Mô tả -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textColor="@color/theme_accent_orange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_food_description_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Detailed description of the food item goes here..."
                    android:textColor="@color/theme_text_secondary"
                    android:textSize="16sp" />

                <!-- Cụm Giá và Nút Add to Cart đã được di chuyển vào đây -->
                <LinearLayout
                    android:id="@+id/bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textColor="@color/theme_text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_total_price_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_add_to_cart_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/theme_accent_orange"
                        android:paddingHorizontal="32dp"
                        android:text="Add to Cart"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>