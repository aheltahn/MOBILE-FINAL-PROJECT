<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_dark_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÊM MÓN ĂN MỚI"
            android:textColor="@color/theme_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:background="@color/theme_surface"/>

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Ảnh"
            android:backgroundTint="@color/theme_accent_orange"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTextFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên món ăn (VD: Salmon Sushi)"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tiền (VD: 50000)"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTextFoodDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả món ăn"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary"
            android:layout_marginTop="8dp"
            android:minLines="2"/>

        <Button
            android:id="@+id/buttonAddFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu Món Ăn"
            android:backgroundTint="@color/theme_accent_orange"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>