<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_dark_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="THÊM MÓN ĂN MỚI"
            android:textColor="@color/theme_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/theme_surface"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/theme_accent_orange"
            android:text="Chọn Ảnh" />

        <EditText
            android:id="@+id/editTextFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tên món ăn (VD: Salmon Sushi)"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary" />

        <EditText
            android:id="@+id/editTextFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Giá tiền (VD: 50000)"
            android:inputType="numberDecimal"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary" />

        <EditText
            android:id="@+id/editTextFoodDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Mô tả món ăn"
            android:minLines="2"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary" />

        <!-- ================= SỬA LẠI Ở ĐÂY ================= -->
        <!-- Thêm EditText cho Category -->
        <EditText
            android:id="@+id/editTextFoodCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Danh mục (VD: Sushi, Cơm, Lẩu)"
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary" />
        <!-- =================================================== -->

        <Button
            android:id="@+id/buttonAddFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/theme_accent_orange"
            android:text="Lưu Món Ăn" />

    </LinearLayout>
</ScrollView>
