<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_dark_background">

    <!-- Header / Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_surface"
        android:elevation="4dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/theme_text_primary"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tài khoản"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_primary" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <!-- Phần thông tin User -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_surface"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:background="@drawable/circle_background"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="Ảnh đại diện" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang tải tên..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_text_primary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="14sp"
                    android:textColor="@color/theme_text_secondary"/>
            </LinearLayout>

            <!-- Mục Chức năng: Tài khoản -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản của tôi"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="@color/theme_text_secondary"
                android:textSize="14sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/theme_surface">

                <!-- Chỉnh sửa thông tin -->
                <TextView
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa tên hiển thị"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text_primary"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="@color/theme_text_secondary"
                    android:background="?attr/selectableItemBackground"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/theme_dark_background" android:layout_marginStart="16dp"/>

                <!-- Đổi mật khẩu -->
                <TextView
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đổi mật khẩu"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text_primary"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="@color/theme_text_secondary"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Mục Chức năng: Hoạt động -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoạt động"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/theme_text_secondary"
                android:textSize="14sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/theme_surface">

                <!-- Lịch sử đơn hàng -->
                <TextView
                    android:id="@+id/btnOrderHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử đơn hàng"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text_primary"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="@color/theme_text_secondary"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Nút Đăng xuất -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:text="Đăng xuất"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/theme_accent_orange"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>