<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_dark_background"
    tools:context=".activities.OrderTrackingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng Thái Đơn Hàng"
            android:textColor="@color/theme_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewOrderIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mã đơn hàng:"
            android:textColor="@color/theme_text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="LOADING..."
            android:textColor="@color/theme_accent_orange"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewOrderIdLabel"
            app:layout_constraintStart_toEndOf="@id/textViewOrderIdLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ... (Các bước trạng thái giữ nguyên) ... -->
        <ImageView
            android:id="@+id/iconProcessing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_status_processing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewOrderIdLabel" />
        <TextView
            android:id="@+id/textProcessing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Đang xử lý"
            android:textColor="@color/theme_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iconProcessing"
            app:layout_constraintStart_toEndOf="@id/iconProcessing"
            app:layout_constraintTop_toTopOf="@id/iconProcessing" />
        <View
            android:id="@+id/line1"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/theme_text_secondary"
            app:layout_constraintEnd_toEndOf="@id/iconProcessing"
            app:layout_constraintStart_toStartOf="@id/iconProcessing"
            app:layout_constraintTop_toBottomOf="@id/iconProcessing" />
        <ImageView
            android:id="@+id/iconShipping"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_status_shipping"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />
        <TextView
            android:id="@+id/textShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Đang giao hàng"
            android:textColor="@color/theme_text_secondary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iconShipping"
            app:layout_constraintStart_toEndOf="@id/iconShipping"
            app:layout_constraintTop_toTopOf="@id/iconShipping" />
        <View
            android:id="@+id/line2"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/theme_text_secondary"
            app:layout_constraintEnd_toEndOf="@id/iconShipping"
            app:layout_constraintStart_toStartOf="@id/iconShipping"
            app:layout_constraintTop_toBottomOf="@id/iconShipping" />
        <ImageView
            android:id="@+id/iconDelivered"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_status_delivered"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />
        <TextView
            android:id="@+id/textDelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Giao thành công"
            android:textColor="@color/theme_text_secondary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iconDelivered"
            app:layout_constraintStart_toEndOf="@id/iconDelivered"
            app:layout_constraintTop_toTopOf="@id/iconDelivered" />

        <!-- THÊM MỚI: Khung thông tin chi tiết đơn hàng -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="12dp"
            app:contentPadding="16dp"
            app:layout_constraintTop_toBottomOf="@id/iconDelivered">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết đơn hàng"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Ngày đặt: 23/12/2025" />

                <TextView
                    android:id="@+id/tvOrderTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Tổng tiền: 250.000đ" />

                <TextView
                    android:id="@+id/tvOrderAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Địa chỉ: 123 Đường ABC, Phường XYZ, Quận 1, TP. HCM" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/buttonBackToHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/theme_accent_orange"
            android:padding="12dp"
            android:text="Quay về trang chủ"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardOrderDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>